<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="crasheddie.studentinfo.Display_activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/usn"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:textAllCaps="true"
                android:textColor="#767676"
                android:layout_weight="9"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/name1"
                    android:textColor="#767676"
                    android:textStyle="bold"
                    android:layout_weight="1"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/name"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                    android:layout_weight="9"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS:"
                    android:layout_weight="0"
                    android:id="@+id/address1"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/address"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"

                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONTACT NO:"
                    android:id="@+id/student_no1"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/student_no"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PARENT CONTACT NO:"
                    android:id="@+id/parent_no1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/parent_no"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="MAIL ID:"
                    android:id="@+id/mail1"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                    
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/mail"
                    android:textColor="#767676"
                     />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8e8888"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YEAR OF ADMISSION:"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/year1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/year"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BRANCH:"
                    android:id="@+id/branch1"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/branch"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEM:"
                    android:id="@+id/sem1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/sem"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CURRENT STATUS:"
                    android:id="@+id/current_status1"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/status"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>



            <Button
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:text="INFORM PARENT"
                android:id="@+id/button"
                android:background="@drawable/round_btn"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:onClick="parentmsg" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8e8888"></LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:text="CALL PARENT"
                android:id="@+id/button2"
                android:background="@drawable/round_btn"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:onClick="parentcall" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8e8888"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACADEMIC DETAILS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/text1"
                android:textColor="#767676"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRST SEM:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/text2"
                    android:textColor="#767676"
                    android:textStyle="bold"
                    android:layout_weight="1"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/first"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                    android:layout_weight="9"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECOND SEM:"
                    android:layout_weight="1"
                    android:id="@+id/text3"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/second"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"

                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="THIRD SEM:"
                    android:id="@+id/text4"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/third"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FOURTH SEM:"
                    android:id="@+id/text5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/fourth"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FIFTH SEM:"
                    android:id="@+id/text6"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/fifth"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIXTH SEM:"
                    android:layout_weight="1"
                    android:id="@+id/text7"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/sixth"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEVENTH SEM:"
                    android:id="@+id/text8"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/seventh"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EIGHTH SEM:"
                    android:id="@+id/text9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/eighth"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                     />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BACK LOGS:"
                        android:id="@+id/text10"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#767676"
                        android:textStyle="bold"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/backs"
                        android:textAllCaps="true"
                        android:textColor="#767676"
                         />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Skills:"
                    android:id="@+id/text20"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#767676"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/skills"
                    android:textAllCaps="true"
                    android:textColor="#767676"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="#8e8888"></LinearLayout>


        </LinearLayout>


    </ScrollView>

